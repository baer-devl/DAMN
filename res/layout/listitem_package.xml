<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:id="@+id/iv_package_icon"
        android:contentDescription="@string/app_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_package_name"
        android:layout_alignTop="@+id/iv_package_icon"
        android:layout_alignLeft="@+id/tv_package_location"
        android:layout_alignStart="@+id/tv_package_location"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tv_package_location"
        android:layout_below="@+id/tv_package_name"
        android:layout_toRightOf="@+id/iv_package_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#4e4e4e" />
</RelativeLayout>